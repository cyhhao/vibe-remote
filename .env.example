# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: Target chat ID to send all Claude Code outputs
# If set, all outputs will be sent to this chat instead of the original chat
TARGET_CHAT_ID=

# Optional: Comma-separated list of allowed Telegram user IDs
# Leave empty to allow all users
ALLOWED_USERS=

# Claude Configuration
CLAUDE_PERMISSION_MODE=bypassPermissions
CLAUDE_CWD=./_tmp
CLAUDE_CONTINUE_CONVERSATION=true
# Optional: Custom system prompt
CLAUDE_SYSTEM_PROMPT=

# Application Configuration
LOG_LEVEL=INFO