# IM Platform Selection
# Options: slack,telegram
IM_PLATFORM=slack

# ============== Slack Configuration ==============
# Required for Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Required for Socket Mode (recommended)
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Optional: For webhook mode instead of Socket Mode
SLACK_SIGNING_SECRET=your-signing-secret

# Optional: Whitelist of allowed channel IDs (comma-separated)
# Examples:
#   null or omit: Accept all channels
#   [C1234567890,C0987654321]: Only accept messages from these channel IDs
SLACK_TARGET_CHANNEL=[]

# Optional: Require @mention in channels (ignored in DMs)
# If true, bot only responds when @mentioned in channels. Default: false
SLACK_REQUIRE_MENTION=false

# ============== Telegram Configuration ==============
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Optional: Whitelist of allowed chat IDs (comma-separated)
# Examples:
#   null or omit: Accept all chats
#   [123456789,987654321]: Only accept messages from these chat IDs
TELEGRAM_TARGET_CHAT_ID=[]

# Claude Configuration
CLAUDE_PERMISSION_MODE=bypassPermissions
CLAUDE_DEFAULT_CWD=./_tmp
# Optional: Custom system prompt
CLAUDE_SYSTEM_PROMPT=

# Application Configuration
LOG_LEVEL=INFO