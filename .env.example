# IM Platform Selection
# Options: telegram, slack
IM_PLATFORM=telegram

# ============== Telegram Configuration ==============
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Optional: Target chat ID to send all Claude Code outputs
# If set, all outputs will be sent to this chat instead of the original chat
TELEGRAM_TARGET_CHAT_ID=

# ============== Slack Configuration ==============
# Required for Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Required for Socket Mode (recommended)
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Optional: For webhook mode instead of Socket Mode
SLACK_SIGNING_SECRET=your-signing-secret

# Optional: Default channel for outputs
# If empty, bot will respond in any channel. If set, bot only responds in this channel.
SLACK_TARGET_CHANNEL=

# Optional: Require @mention in channels (ignored in DMs)
# If true, bot only responds when @mentioned in channels. Default: true
SLACK_REQUIRE_MENTION=true

# Claude Configuration
CLAUDE_PERMISSION_MODE=bypassPermissions
CLAUDE_CWD=./_tmp
CLAUDE_CONTINUE_CONVERSATION=true
# Optional: Custom system prompt
CLAUDE_SYSTEM_PROMPT=

# Application Configuration
LOG_LEVEL=INFO